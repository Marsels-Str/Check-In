APP_NAME=Check-In
APP_ENV=local
APP_KEY=            # set locally with `php artisan key:generate`
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=checkin
DB_USERNAME=root
DB_PASSWORD=

# Sessions
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# Broadcasting
BROADCAST_DRIVER=reverb

# Reverb credentials
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=

# Reverb host config
# In production with Laravel Reverb use the host/scheme Reverb shows (likely wss/443)
REVERB_HOST=reverb.laravel.com
REVERB_PORT=443
REVERB_SCHEME=https
REVERB_APP_CLUSTER=mt1

# Vite client env
# Vite exposes only variables prefixed with VITE_
VITE_REVERB_APP_KEY=${REVERB_APP_KEY}
VITE_REVERB_HOST=${REVERB_HOST}
VITE_REVERB_PORT=${REVERB_PORT}
VITE_REVERB_SCHEME=${REVERB_SCHEME}

# Example: Vite app name
VITE_APP_NAME="${APP_NAME}"
